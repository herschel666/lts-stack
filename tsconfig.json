{
  "compilerOptions": {
    "rootDir": "./server",
    "baseUrl": "./src",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "webpack", "webpack-env"]
  },
  "exclude": ["node_modules", "@lts-stack/page", "dist"]
}
