{
  "compilerOptions": {
    "rootDir": "./",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"]
  },
  "include": ["src", "assets/javascript"],
  "exclude": ["node_modules", "dist"]
}
