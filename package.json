{
  "name": "lts-stack",
  "version": "0.1.0",
  "description": "A modern stack consisting of Lambda, Turbolinks & StimulusJS.",
  "private": true,
  "scripts": {
    "start": "concurrently -n \"sandbox,webpack\" \"arc sandbox\" \"webpack --watch\"",
    "poststart": "./scripts/poststart",
    "prebuild": "rm -rf ./dist",
    "build": "NODE_ENV=production webpack -p --display-error-details --bail --progress",
    "serve": "arc sandbox",
    "test:watch": "jest --watch",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint:assets": "eslint --fix ./assets/**/*.ts",
    "lint:server": "eslint --fix ./server/**/*.{ts,tsx}",
    "lint:util": "eslint --fix ./util/**/*.ts",
    "lint:js": "npx eslint --fix *.js",
    "lint:all": "npm-run-all -l -p lint:assets lint:server lint:util lint:js",
    "lint": "npm-run-all type-check lint:all",
    "fmt": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write \"**/**.{js,md,css,ts,tsx}\"",
    "precommit": "lint-staged"
  },
  "author": "Emanuel Kluge (https://emanuel-kluge.de/)",
  "license": "MIT",
  "dependencies": {
    "@architect/architect": "6.5.4",
    "@architect/sandbox": "1.13.0",
    "xstate": "4.11.0",
    "classnames": "2.2.6",
    "date-fns": "2.15.0",
    "nanoid": "3.1.11",
    "stimulus": "1.1.1",
    "tailwindcss": "1.6.0",
    "turbolinks": "5.2.0"
  },
  "devDependencies": {
    "@architect/functions": "3.12.2",
    "@babel/core": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@testing-library/dom": "7.21.7",
    "@types/classnames": "2.2.10",
    "@types/date-fns": "2.6.0",
    "@types/jest": "26.0.8",
    "@types/turbolinks": "5.2.0",
    "@types/webpack-env": "1.15.2",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "autoprefixer": "9.8.6",
    "aws-sdk": "2.725.0",
    "babel-loader": "8.1.0",
    "concurrently": "5.2.0",
    "copy-webpack-plugin": "6.0.3",
    "core-js": "3.6.5",
    "css-loader": "4.2.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "file-loader": "6.0.0",
    "globby": "11.0.1",
    "html-webpack-plugin": "4.3.0",
    "jest": "26.2.2",
    "lint-staged": "10.2.11",
    "mini-css-extract-plugin": "0.9.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-loader": "3.0.0",
    "preact": "10.4.6",
    "prettier": "2.0.5",
    "regenerator-runtime": "0.13.7",
    "terser-webpack-plugin": "3.0.8",
    "ts-jest": "26.1.4",
    "ts-loader": "8.0.1",
    "typescript": "3.9.7",
    "url-loader": "4.1.0",
    "vhtml": "2.2.0",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/"
    ],
    "projects": [
      {
        "displayName": "server",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/server/**/test.ts"
        ],
        "moduleNameMapper": {
          "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/util/file-mock.ts"
        }
      },
      {
        "displayName": "client",
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/assets/javascript/**/*.test.ts"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
