{
  "name": "lts-stack",
  "version": "0.1.0",
  "description": "A modern stack consisting of Lambda, Turbolinks & StimulusJS.",
  "private": true,
  "scripts": {
    "postinstall": "arc hydrate",
    "watch-sandbox": "arc sandbox",
    "watch-webpack": "webpack --watch",
    "start": "concurrently --raw --kill-others --kill-others-on-fail npm:watch-*",
    "prebuild": "rm -rf ./dist",
    "build": "NODE_ENV=production webpack -p --display-error-details --bail --progress",
    "serve": "arc sandbox",
    "test:watch": "jest --watch",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint:assets": "eslint --fix ./assets/**/*.ts",
    "lint:server": "eslint --fix ./server/**/*.{ts,tsx}",
    "lint:util": "eslint --fix ./util/**/*.ts",
    "lint:js": "npx eslint --fix *.js",
    "lint:all": "npm-run-all -l -p lint:assets lint:server lint:util lint:js",
    "lint": "npm-run-all type-check lint:all",
    "fmt": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --write \"**/**.{js,md,css,ts,tsx}\"",
    "precommit": "lint-staged"
  },
  "author": "Emanuel Kluge (https://emanuel-kluge.de/)",
  "license": "MIT",
  "dependencies": {
    "@architect/architect": "7.0.6",
    "@architect/sandbox": "2.0.3",
    "xstate": "4.13.0",
    "classnames": "2.2.6",
    "date-fns": "2.16.1",
    "nanoid": "3.1.12",
    "stimulus": "1.1.1",
    "tailwindcss": "1.8.11",
    "turbolinks": "5.2.0"
  },
  "devDependencies": {
    "@architect/functions": "3.13.3",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@testing-library/dom": "7.24.5",
    "@types/classnames": "2.2.10",
    "@types/jest": "26.0.14",
    "@types/turbolinks": "5.2.0",
    "@types/webpack-env": "1.15.3",
    "@typescript-eslint/eslint-plugin": "4.4.0",
    "@typescript-eslint/parser": "4.4.0",
    "autoprefixer": "10.0.1",
    "aws-sdk": "2.768.0",
    "babel-loader": "8.1.0",
    "concurrently": "5.3.0",
    "copy-webpack-plugin": "6.2.0",
    "core-js": "3.6.5",
    "css-loader": "4.3.0",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.3",
    "file-loader": "6.1.0",
    "globby": "11.0.1",
    "html-webpack-plugin": "4.5.0",
    "jest": "26.5.2",
    "lint-staged": "10.4.0",
    "mini-css-extract-plugin": "0.12.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.4",
    "postcss": "8.1.1",
    "postcss-loader": "4.0.3",
    "preact": "10.5.4",
    "prettier": "2.1.2",
    "regenerator-runtime": "0.13.7",
    "terser-webpack-plugin": "4.2.3",
    "ts-jest": "26.4.1",
    "ts-loader": "8.0.4",
    "typescript": "4.0.3",
    "url-loader": "4.1.0",
    "vhtml": "2.2.0",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/"
    ],
    "projects": [
      {
        "displayName": "server",
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/server/**/test.ts"
        ],
        "moduleNameMapper": {
          "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/util/file-mock.ts"
        }
      },
      {
        "displayName": "client",
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/assets/javascript/**/*.test.ts"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
