{
  "name": "lts-stack",
  "version": "0.1.0",
  "description": "A modern stack consisting of Lambda, Turbolinks & StimulusJS.",
  "private": true,
  "scripts": {
    "postinstall": "arc hydrate",
    "watch-sandbox": "arc sandbox",
    "watch-webpack": "webpack --watch",
    "start": "concurrently --raw --kill-others --kill-others-on-fail npm:watch-*",
    "prebuild": "rm -rf ./dist",
    "build": "NODE_ENV=production webpack --env=production --bail --progress",
    "serve": "arc sandbox",
    "test:watch": "jest --watch",
    "test": "jest",
    "type-check": "tsc",
    "prelint": "npm-run-all type-check fmt:check",
    "lint": "eslint --ignore-pattern dist --ext='.ts' --ext='.js' .",
    "fmt": "prettier --config ./.prettierrc --ignore-path ./.prettierignore \"**/**.{js,md,css,ts,js}\"",
    "fmt:write": "npm run fmt -- --write",
    "fmt:check": "npm run fmt -- --check",
    "precommit": "lint-staged",
    "predeploy": "npm run build",
    "deploy": "arc deploy"
  },
  "author": "Emanuel Kluge (https://emanuel-kluge.de/)",
  "license": "MIT",
  "dependencies": {
    "@architect/architect": "8.5.13",
    "@architect/sandbox": "3.5.1",
    "stimulus": "2.0.0",
    "tailwindcss": "2.2.4",
    "turbolinks": "5.2.0",
    "xstate": "4.19.1"
  },
  "devDependencies": {
    "@architect/functions": "3.13.12",
    "@babel/core": "7.14.8",
    "@babel/preset-env": "7.14.8",
    "@testing-library/dom": "8.1.0",
    "@types/aws-lambda": "8.10.80",
    "@types/jest": "26.0.24",
    "@types/turbolinks": "5.2.0",
    "@types/webpack-env": "1.16.2",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "autoprefixer": "10.3.1",
    "aws-sdk": "2.951.0",
    "babel-loader": "8.2.2",
    "classnames": "2.3.1",
    "concurrently": "6.2.0",
    "copy-webpack-plugin": "9.0.1",
    "core-js": "3.15.2",
    "css-loader": "6.2.0",
    "date-fns": "2.22.1",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "file-loader": "6.2.0",
    "herschel666-arc-macros-custom-log-groups": "0.1.3",
    "htm": "3.1.0",
    "jest": "27.0.6",
    "lint-staged": "11.0.1",
    "mini-css-extract-plugin": "2.1.0",
    "nanoid": "3.1.23",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "6.0.1",
    "postcss": "8.3.6",
    "postcss-loader": "6.1.1",
    "prettier": "2.3.2",
    "regenerator-runtime": "0.13.7",
    "terser-webpack-plugin": "5.1.4",
    "ts-jest": "27.0.4",
    "ts-loader": "9.2.3",
    "typescript": "4.3.5",
    "url-loader": "4.1.1",
    "webpack": "5.45.1",
    "webpack-cli": "4.7.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/dist/"
    ],
    "projects": [
      {
        "displayName": "server",
        "testEnvironment": "node",
        "testMatch": [
          "<rootDir>/src/**/test.js"
        ]
      },
      {
        "displayName": "client",
        "preset": "ts-jest",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/assets/javascript/**/*.test.ts"
        ]
      }
    ]
  },
  "lint-staged": {
    "*.{css,md}": [
      "npm run fmt:check",
      "git add"
    ],
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  }
}
