{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
